@model GameCatalog.ViewModels.EditGameViewModel;
<h1 style="margin-bottom: 30px">Edit a Game in the Database</h1>

<label asp-for="Game.Id" name="gameId" hidden></label>

<form asp-controller="Home" asp-action="SubmitEditGameForm" method="post">
    <div class="form-group row">
        <label asp-for="Game.Name" class="col-sm-2 col-form-label">Edit Name</label>
        <div class="col-sm-10">
            <input asp-for="Game.Name" class="form-control" />
            <span asp-validation-for="Game.Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Game.Description" class="col-sm-2 col-form-label">Edit Description</label>

        <div class="col-sm-10">
            <textarea asp-for="Game.Description" class="form-control"></textarea>

        </div>
        <span asp-validation-for="Game.Description"></span>
    </div>

    <div class="form-group row">
        <label asp-for="Game.Cover" class="col-sm-2 col-form-label">Cover Art URL</label>
        <div class="col-sm-10">
            <input asp-for="Game.Cover" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Game.DeveloperId" class="col-sm-2 col-form-label">Developer</label>
        <div class="col-sm-10">
            <select asp-for="Game.DeveloperId" asp-items="@Model.Developers" class="custom-select mr-sm-2">
            </select>
            <div class="col-sm-2">
                <a href="/Developer/Add">Add Developer</a>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Game.ReleaseDate" class="col-sm-2 col-form-label">Release Date</label>
        <div class="col-sm-10">
            <input asp-for="Game.ReleaseDate" class="form-control" type="date"/>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">Genres</div>
        <div class="col-sm-10">
            @foreach (var genre in Model.Genres)
            {
                <div class="form-check">
                    @foreach (var gameGenres in Model.GameGenres) { 
                        @if (genre.Value == gameGenres.Value && Model.Game.Id == int.Parse(gameGenres.Text))
                        {
                            <input class="form-check-input" type="checkbox" name="selectedGenres" value="@genre.Value" checked />
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" name="selectedGenres" value="@genre.Value" />
                        }
                    }
                    <label class="form-check-label" name="selectedGenres" value="@genre.Text">@genre.Text</label>
                </div>
            }
            <div class="col-sm-2">
                <a href="/Genre/Add">Add Genre</a>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Edit Game" class="btn btn-primary" />
        </div>
    </div>
</form>