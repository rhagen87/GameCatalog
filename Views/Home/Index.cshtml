@{
    ViewData["Title"] = "Home Page";
}

@model List<GameCatalog.Models.Game>

<div class="text-center">
    <h1 class="display-4">Welcome to Your Games DB!</h1>
    <p><a asp-controller="Home" asp-action="AddGame">Add Game to Database</a></p>
</div>

@if (Model.Count == 0)
{
    <p>Your games are in another castle.</p>
}

else
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Developer</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (Game game in Model)
        {
            <tr>
                <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@game.Id">@game.Name</a></td>
                <td>@game.Developer.Name</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@game.Id">Edit</a></td> 
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@game.Id">Delete</a></td>
            </tr>
        }
    </table>
}
