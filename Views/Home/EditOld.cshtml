@model GameCatalog.Models.Game;
<h1 style="margin-bottom: 30px">Edit a Game in the Database</h1>

<form asp-controller="Home" asp-action="SubmitEditGameForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group" hidden>
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>


    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Edit Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Edit Description</label>

        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control"></textarea>

        </div>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group row">
        <label asp-for="Cover" class="col-sm-2 col-form-label">Cover Art URL</label>
        <div class="col-sm-10">
            <input asp-for="Cover" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DeveloperId" class="col-sm-2 col-form-label">Developer</label>
        <div class="col-sm-10">
            <select asp-for="DeveloperId" class="custom-select mr-sm-2">
            </select>
            <div class="col-sm-2">
                <a href="/Developer/Add">Add Developer</a>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ReleaseDate" class="col-sm-2 col-form-label">Release Date</label>
        <div class="col-sm-10">
            <input asp-for="ReleaseDate" class="form-control" type="date" />
        </div>
    </div>

